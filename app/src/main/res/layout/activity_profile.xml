<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/profile_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Neha Patel"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginHorizontal="@dimen/_20sdp">

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="My Profile"
        android:textSize="@dimen/_12ssp"
        android:drawableRight="@drawable/next_icon"
        android:drawablePadding="@dimen/_188sdp"/>


    <TextView
        android:id="@+id/txtChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Change Password"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_145sdp"
        android:drawableRight="@drawable/next_icon"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Payment Settings"
        android:textSize="@dimen/_12ssp"
        android:drawableRight="@drawable/next_icon"
        android:drawablePadding="@dimen/_145sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="My Voucher"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_177sdp"
        android:drawableRight="@drawable/next_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Notification"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_175sdp"
        android:drawableRight="@drawable/next_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="About Us"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_192sdp"
        android:drawableRight="@drawable/next_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Contact Us"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_182sdp"
        android:drawableRight="@drawable/next_icon"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sing Out"
        android:background="@drawable/round_corner_bg2"
        android:paddingHorizontal="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:textAllCaps="false"/>

</LinearLayout>